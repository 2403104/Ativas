<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Product</title>
    <style>
        .fourItemBox {
            display: flex; 
            flex-wrap: wrap;
            justify-content: space-between; 
            width: 100%;
            height: auto;
            margin-bottom: 20px; 
        }
        .singleCard {
            flex: 1 1 24%;
            margin: 10px;
            padding: 10px;
            color: white; 
            font-size: 16px; 
            box-sizing: border-box;
            align-items: center;
        }
        .singleCard img {
            
            padding: 10px;
            width: 80%;
            margin: auto;
            border-radius: 15px;
        }
        .singleCard:hover {
            box-shadow: 0px 2px 5px rgba(0,0,0,0.4);
        }
    </style>
</head>
<body>
    <% for (let i = 0; i < categoryProduct.length; i += 3) { %>
        <div class="fourItemBox">
            <% for (let j = i; j < i + 3 && j < categoryProduct.length; j++) { %>
                <div class="singleCard" onclick="goToDetails('<%= categoryProduct[j].name %>', '<%= categoryProduct[j].category %>')">
                    <img src="<%=categoryProduct[j].images[0]%>" alt="<%=categoryProduct[j].name%>">
                    <strong style="display: block; font-size: 20px; text-align: center; color:black; margin: 10px;"><%=categoryProduct[j].name%></strong>
                    <div style="display: flex;">
                        <div class="ratings">
                            <%=categoryProduct[j].seller.rating%> <i class="fa-solid fa-star" style="font-size: 15px;"></i>
                        </div>
                        <p style="font-size: 16px; font-weight: 400; color: black;">
                            <i><strong><%=categoryProduct[j].seller.totalRatings%> Ratings & <%=categoryProduct[j].seller.reviews%> Reviews</strong></i>
                        </p>
                    </div>
                    <div style="text-align: center; margin-top: 10px; color: black;">
                        <strong style="font-size: 24px; ">â‚¹<%=categoryProduct[j].price.discountedPrice%></strong>
                        <div style="display: flex; width: 100%; justify-content: space-evenly;">
                            <p style="text-decoration: line-through; font-size: 25px; color: grey;">
                                <i class="fa-solid fa-indian-rupee-sign" style="font-size: 18px;"></i>
                                <strong>
                                    <%= categoryProduct[j].price.originalPrice %>
                                </strong>
                            </p>
                            <strong
                                style="color: green; font-size: 25px; margin-left: 5px; margin-top: 11px; margin-bottom: 0px;">
                                <%=
                                    Math.round((categoryProduct[j].price.originalPrice-categoryProduct[j].price.discountedPrice)*100/categoryProduct[j].price.originalPrice)%>
                                    % off
                            </strong>
                        </div>
                        <% if (categoryProduct[j].paymentOptions.cashOnDelivery){%>
                            <strong
                                style="display: block; font-size: 18px; text-align: center; color: green; margin-top: 10px;">Cash
                                On Delivery Available</strong>
                            <%}%>
                            <% categoryProduct[j].availableOffers.forEach((offer)=>{%>
                                <strong style="display: block; text-align: center; font-size: 18px; color: rgb(2, 161, 2);">
                                    <%=offer.description%>
                                </strong>
                                <%})%>
                    </div>
                </div>
            <% } %>
        </div>
    <% } %>
    <script>
        function goToDetails(name,category){
            window.location.href = `/product?name=${encodeURIComponent(name)}&category=${encodeURIComponent(category)}`;
        }
    </script>
</body>
</html>
