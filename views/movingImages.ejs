<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moving Images</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .movingContainer {
            width: 100vw;
            height: 80vh;
            /* display: flex; */
            justify-content: center;
            align-items: center;
            margin-top: 15px;
            margin-left: 15px;
        }

        .container {
            background-image: url(/images/movingImages/1.jpg);
            background-size: cover;
            position: relative;
            height: 90%;
            width: 98%;
            background-color: aqua;
        }

        #forward {
            position: fixed;
            right: 20px;
            top: 70px;
            width: 30px;
            height: 400px;
            background-color: transparent;
            border: none;
            font-size: 30px;
            color: white;
        }

        #backward {
            position: fixed;
            top: 70px;
            left: 20px;
            width: 30px;
            height: 400px;
            background-color: transparent;
            border: none;
            font-size: 30px;
            color: white;
        }

        #backward:hover {
            border: 1px solid rgb(43, 154, 154);
        }

        #forward:hover {
            border: 1px solid rgb(43, 154, 154);
        }
        #filler{
            width: 98%;
            height: 10px;
        }
    </style>
</head>

<body>
    <header>
        <div class="movingContainer">
            <div class="container">
                <button id="forward">
                    <i class="fas fa-arrow-right"></i>
                </button>
                <button id="backward">
                    <i class="fas fa-arrow-left"></i>
                </button>
            </div>
            <div id="filler">
            </div>
        </div>
    </header>
    <script>
        let image_arr = [
            "1.jpg",
            "2.jpg",
            "3.jpg",
            "4.jpg",
            "5.jpg",
            "6.jpg",
            "7.jpg",
            "8.jpg",
        ];

        let forward = document.querySelector('#forward');
        let backward = document.querySelector('#backward');
        let container = document.querySelector('.container');
        let curr = 1;

        function changeImage(next = true) {
            curr = next ? curr + 1 : curr - 1;
            if (curr > 8) curr = 1;
            if (curr < 1) curr = 8;
            let img = `/images/movingImages/${curr}.jpg`;
            container.style.backgroundImage = `url(${img})`;
        }

        forward.addEventListener('click', () => {
            changeImage(true);
        });

        backward.addEventListener('click', () => {
            changeImage(false);
        });

        let autoSlide = setInterval(() => {
            changeImage(true);
        }, 2000);

        function resetAutoSlide() {
            clearInterval(autoSlide);
            autoSlide = setInterval(() => {
                changeImage(true);
            }, 2000);
        }

        forward.addEventListener('click', resetAutoSlide);
        backward.addEventListener('click', resetAutoSlide);
    </script>
</body>

</html>
